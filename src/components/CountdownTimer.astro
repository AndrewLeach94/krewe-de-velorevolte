---
import { CURRENT_PARADE_DATE } from "../consts";

// Target countdown date
const targetDate = new Date(CURRENT_PARADE_DATE).getTime();

// Format date for display
const date = new Date(CURRENT_PARADE_DATE);
const month = date.toLocaleString('en-US', { month: 'long' });
const day = date.getDate();
const year = date.getFullYear();
const ordinalSuffix = (day: number) => {
  if (day > 3 && day < 21) return 'th';
  switch (day % 10) {
    case 1: return 'st';
    case 2: return 'nd';
    case 3: return 'rd';
    default: return 'th';
  }
};
const formattedDate = `${month} ${day}${ordinalSuffix(day)}, ${year}`;
const isParadeOver = new Date() > new Date(CURRENT_PARADE_DATE);
---

<div class={`countdown ${isParadeOver ? 'hidden' : ''}`}>
  <p>We Roll On {formattedDate}</p>

  <div class="countdown-grid">
    <div class="countdown-item">
      <div id="days" class="countdown-value">0</div>
      <div class="countdown-label">Days</div>
    </div>
    <div class="countdown-item">
      <div id="hours" class="countdown-value">0</div>
      <div class="countdown-label">Hours</div>
    </div>
    <div class="countdown-item">
      <div id="minutes" class="countdown-value">0</div>
      <div class="countdown-label">Minutes</div>
    </div>
    <div class="countdown-item">
      <div id="seconds" class="countdown-value">0</div>
      <div class="countdown-label">Seconds</div>
    </div>
  </div>
</div>

<script>
import { CURRENT_PARADE_DATE } from "../consts";

  const targetDate = new Date(CURRENT_PARADE_DATE).getTime();

  function updateCountdown() {
    const now = new Date().getTime();
    const difference = targetDate - now;

    const daysEl = document.getElementById('days') as HTMLElement;
    const hoursEl = document.getElementById('hours') as HTMLElement;
    const minutesEl = document.getElementById('minutes') as HTMLElement;
    const secondsEl = document.getElementById('seconds') as HTMLElement;

    if (difference > 0) {
        daysEl.textContent = Math.floor(difference / (1000 * 60 * 60 * 24)).toString();
        hoursEl.textContent = Math.floor((difference % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)).toString();
        minutesEl.textContent = Math.floor((difference % (1000 * 60 * 60)) / (1000 * 60)).toString();
        secondsEl.textContent = Math.floor((difference % (1000 * 60)) / 1000).toString();
    } else {
        document.querySelectorAll('.countdown-value').forEach(el => el.textContent = '0');
    }
  }

  updateCountdown();
  setInterval(updateCountdown, 1000);
</script>

<style lang="scss">
  @use '../styles/mixins.scss' as *;

  .countdown {
    box-sizing: border-box;
    color: var(--color-white);
    padding: 2rem;
    border-radius: 1rem;
    text-align: center;
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(4px);
    width: 100%;

  h3 {
    font-size: 1.7rem;
    font-weight: bold;
    margin: 0;
  }

  p {
    font-size: 1.3rem;
    margin-bottom: 1.5rem;
    margin-top: 0;
    font-weight: 600;
  }

  .countdown-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }

  .countdown-item {
    color: var(--color-white); // matching primary color
    border-radius: 0.75rem;
    padding: 1rem;
    border: solid 1px rgba(255,255,255,0.2);

    .countdown-value {
      font-size: 1.3rem;
      font-weight: 600;
    }

    .countdown-label {
      font-size: 1rem;
    }
  }

  &.hidden {
    display: none;
  }
}

@include tabletDown {
  .countdown {
    backdrop-filter: blur(6px);
    .countdown-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
}

</style>
