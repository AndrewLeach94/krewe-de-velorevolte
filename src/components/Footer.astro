<style lang="scss">
	@use '../styles/mixins.scss' as *;

	footer {
		display: flex;
		flex-direction: column;
		justify-content: center;
		gap: 1rem;
		padding: 1rem 0;
		align-items: center;
		color: var(--color-white);
		font-size: 1rem;
		@include globalPadding;

		.social-link {
			width: 1.25rem;
			display: inline-flex;
			padding: 0.75rem;
			background: var(--color-black-lighter);
			border-radius: 2rem;
			transition: all 0.2s ease;
			&:hover {
				background: var(--color-primary);
				transition: all 0.2s ease;
			}
		}
		svg {
			height: auto;
			width: 100%;
			fill: var(--color-white);
		}
	}

	@include mobileOnly {
		footer {
			text-align: center;
			font-size: 1rem;
		}
	}
</style>
