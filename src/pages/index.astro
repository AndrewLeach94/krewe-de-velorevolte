<style lang="scss">
@use '../styles/mixins.scss' as *;

	header {
		position: relative;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-self: center;
		text-align: center;
		overflow: hidden;
		padding: 4rem 0 5rem 0;
		margin-top: 4rem;
		@include globalPadding;
		h1 {
			margin: 0;
		}
		p {
			font-size: 2.3rem;
			margin-top: 1rem;
		}
		video {
			width: 100%;
			height: auto;
			position: absolute;
			inset: 0;
			z-index: -100;
		}
		&::before {
			content: '';
			position: absolute;
			width: 100%;
			height: 100%;
			inset: 0;
			background: rgba(0, 0, 0, 0.7);
			z-index: -10;
		}
	}

	.button-container {
			display: flex;
			align-items: center;
			justify-content: center;
			gap: 1rem;
			margin-bottom: 2.5rem;
		}

		section {
			padding-top: 2rem;
			padding-bottom: 4rem;
			scroll-margin: 5rem;
			@include globalPadding;
			h2 {
				padding-top: 1.5rem;
				text-align: center;
			}
		}

		section:nth-of-type(2) {
			background-color: var(--color-black-light);
		}

		#about-section {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 4rem;
			padding-top: 5rem;
			h2 {
				padding-top: 0;
			}
			img {
				width: 100%;
				height: auto;
			}
			.social-link {
				width: 1.75rem;
				display: inline-flex;
				padding: 0.75rem;
				background: var(--color-black-lighter);
				border-radius: 2rem;
				transition: all 0.2s ease;
				&:hover {
					background: var(--color-primary);
					transition: all 0.2s ease;
				}
			}
			svg {
				height: auto;
				width: 100%;
				fill: var(--color-white);
			}
		}

		#mission {
			h2 {
				margin-bottom: 0.5rem;
			}
			p {
				text-align: center;
			}
			ul {
				padding-left: 0;
			}
			li {
				margin: 2.5rem 0;
				list-style: none;
			}
		}

		.card-container {
			display: grid;
			grid-template-columns: 1fr 1fr;
			gap: 3rem;
		}

		.card {
			background-color: var(--color-black);
			padding: 1.75rem;
			border: solid 1px grey;
			border-radius: 0.5rem;
			h3 {
				margin-top: 0;
				margin-bottom: 1.25rem;
				text-align: center;
			}
		}

		#contact-us {
			padding-top: 0;
		}

		@include tabletDown {
			header {
				video {
					height: 100%;
					width: auto;
				}
			}
			.card-container {
				grid-template-columns: 1fr;
			}
		}

		@include mobileOnly {
			header {
				.button-container {
					flex-direction: column;
					width: 100%;
					a {
						width: 100%;
					}
				}
			}
			#about-section {
				display: flex;
				flex-direction: column-reverse;
				gap: 2rem;
			}
			.card {
				padding: 1rem;
			}
		}

</style>
